{% extends "@FOSUser/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <div class="container">
        <p class="login-text-title">Prijava</p>
        <div class="row">
            <div class="col-12">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                       <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <div class="form-group">
                           <label for="username">Korisničko ime</label>
                           <input class="form-control" type="text" id="username" name="_username"
                                  value="{{ last_username }}"
                                  required="required"
                                  autofocus
                                  placeholder="Korisničko ime"
                        />
                    </div>

                    <div class="form-group">
                           <label for="password">Lozinka</label>
                           <input class="form-control" type="password" id="password" name="_password"
                                  required="required"
                                  placeholder="Lozinka"
                        />
                    </div>

                    {% if error %}  
                        <div class="errorLoginMsg">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6 col-xs-12">
                            </div>
                            <div class="col-sm-6 col-xs-12">

                                <input class="btn btn-success" type="submit" id="_submit" name="_submit"
                                       value="Prijavi se"/>
                            </div>
                        </div>
                        <br>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock fos_user_content %}