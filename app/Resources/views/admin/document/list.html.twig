{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            <div class="row">
                <a class="btn btn-success" href="{{ path('document_create') }}">Novi dokument</a>
            </div>
            <div class="row">
                <table class="table table-dark data-table" id="document-table">
                    <thead>
                    <tr>
                        <th>Ime</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for document in documentes %}
                        <tr>
                            <td>{{ document.name }}</td>
                            <td>
                                <a class="btn btn-primary"
                                   href="{{ path('document_edit', {'id': document.id}) }}">Uredi</a>
                                <a class="btn btn-danger" href="{{ path('document_delete', {'id': document.id}) }}">Obri≈°i</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
{% endblock %}

{% block javascripts %}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#document-table').DataTable();
        });
    </script>
{% endblock %}