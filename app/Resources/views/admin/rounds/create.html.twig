{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.season) }}
                        {{ form_errors(form.season) }}
                        {{ form_widget(form.season, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.league) }}
                        {{ form_errors(form.league) }}
                        {{ form_widget(form.league, {'attr': {'class': 'form-control'} }) }}
                    </div>


                    <div class="form-group">
                        {{ form_label(form.submitBtn) }}
                        {{ form_widget(form.submitBtn, {'attr': {'class': 'btn btn-success'} }) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#round_season').select2();
            $('#round_league').select2();
        });
    </script>
{% endblock %}